@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Film", new { area = "" })">
                <button type="submit" class="btn btn-outline-light">@User.Identity.Name</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item mr-3">
            <a class="text-white" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="text-white" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
    }
</ul>
