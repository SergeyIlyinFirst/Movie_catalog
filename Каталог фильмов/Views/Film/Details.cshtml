@{
    ViewData["Title"] = "подробности";
}
@model Film

    <br />
    <div class="row justify-content-center">
        <div class="card" style="width: 18rem;">
            <img width="100" height="250" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Poster))" class="card-img-top" alt="Постер">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Regisseur</p>
                <p class="card-text">@Model.YearofManufacture.ToString("yyyy")</p>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
    
